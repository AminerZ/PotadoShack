<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="626.0" prefWidth="940.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <fx:include source="../controllers/custom/TitleBar.fxml" />
    </top>
    <center>
        <AnchorPane>
            <children>
                <VBox layoutX="320.0" layoutY="137.0" maxHeight="320.0" prefHeight="320.0" prefWidth="300.0">
                    <children>
                        <Label text="Sign up">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txt_username" promptText="username" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </TextField>
                        <PasswordField fx:id="txt_password" promptText="password" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </PasswordField>
                        <PasswordField fx:id="txt_password_confirm" promptText="Confirm password" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </PasswordField>
                        <HBox>
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                            <TextField fx:id="txt_first_name" promptText="first name" VBox.vgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets right="20.0" />
                                </HBox.margin>
                            </TextField>
                            <TextField fx:id="txt_last_name" promptText="last name" VBox.vgrow="ALWAYS" />
                        </HBox>
                        <Button fx:id="btn_signup" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#signup" prefWidth="260.0" text="Signup" textAlignment="CENTER">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </Button>
                        <TextFlow prefHeight="23.0" prefWidth="260.0">
                            <children>
                                <Label text="Already have an account?">
                                    <padding>
                                        <Insets right="3.0" />
                                    </padding>
                                </Label>
                                <Hyperlink onAction="#Signin" text="Signin" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
                            </VBox.margin>
                        </TextFlow>
                    </children>
                </VBox>
                <Label fx:id="error_span" alignment="CENTER" cache="true" cacheHint="QUALITY" contentDisplay="CENTER" depthTest="DISABLE" layoutX="594.0" layoutY="422.0" prefHeight="58.0" prefWidth="126.0" style="-fx-background-color: red;" text="Aminer" textAlignment="CENTER" visible="false" wrapText="true">
                    <opaqueInsets>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </opaqueInsets>
                </Label>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
