<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@ProductInCart.css"
         maxHeight="50.0" prefWidth="700.0" styleClass="box" type="AnchorPane">
    <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" AnchorPane.leftAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="15.0" right="10.0" top="10.0"/>
        </padding>
        <Label fx:id="lbl_icon" styleClass="fontawesome, icon" text=""/>
        <Label fx:id="lbl_count" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" styleClass="count" text="1">
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
        </Label>
        <Label fx:id="lbl_name" maxWidth="255.0" styleClass="product-name" text="Product Name">

            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
    </HBox>
    <HBox spacing="5" AnchorPane.rightAnchor="0.0">
        <Label fx:id="lbl_price" alignment="CENTER" contentDisplay="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="30.0"
               prefWidth="80.0" styleClass="product-price" text="0">
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </Label>
        <Label fx:id="lbl_total_price" alignment="CENTER" contentDisplay="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="30.0"
               prefWidth="120" styleClass="product-total" text="0">
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <JFXButton fx:id="btn_minus" onAction="#onMinus" prefHeight="30.0" styleClass="fontawesome" text="">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </JFXButton>
        <JFXButton fx:id="btn_plus" onAction="#onPlus" prefHeight="30.0" styleClass="fontawesome" text="">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </JFXButton>
        <JFXButton fx:id="btn_delete" onAction="#onDelete" prefHeight="30.0" styleClass="fontawesome, delete-button" text="">
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </JFXButton>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>
</fx:root>
