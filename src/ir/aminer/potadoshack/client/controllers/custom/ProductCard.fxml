<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root minWidth="-Infinity" prefHeight="240.0" prefWidth="160.0" style="-fx-background-radius: 5; -fx-background-color: lightgrey;" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <VBox minWidth="-Infinity" prefHeight="240.0" prefWidth="160.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Pane fx:id="head" minHeight="7.0" prefHeight="7.0" prefWidth="160.0" style="-fx-background-color: black; -fx-background-radius: 5 5 0 0;" />
            <ImageView fx:id="thumbnail" fitHeight="160.0" fitWidth="160.0" VBox.vgrow="ALWAYS" />
            <AnchorPane prefHeight="73.0" prefWidth="160.0">
                <VBox prefHeight="40.0" prefWidth="160.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Label fx:id="txt_name" prefHeight="25.0" text="Name" wrapText="true">
                        <VBox.margin>
                            <Insets left="10.0" right="5.0" top="5.0" />
                        </VBox.margin>
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                    </Label>
               <Label fx:id="lbl_price" prefHeight="35.0" prefWidth="100.0" text="price" textAlignment="CENTER">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets left="10.0" right="5.0" />
                  </VBox.margin>
               </Label>
                </VBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="95.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <TextField fx:id="txt_count" alignment="CENTER" focusTraversable="false" prefHeight="25.0" prefWidth="30.0" text="1">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </TextField>
                    <Button fx:id="btn_order" alignment="CENTER_RIGHT" defaultButton="true" onAction="#onOrder" prefWidth="50.0" style="-fx-background-color: limegreen;" text="Order" textAlignment="JUSTIFY" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
            </AnchorPane>
        </children>
    </VBox>
   <effect>
      <DropShadow height="5.0" radius="2.0" width="5.0" />
   </effect>
</fx:root>
